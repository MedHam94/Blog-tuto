<img src="\img\hero-image.webp" alt="person looking out through windows" class="hero-image" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="articles-ul">
        <% data.forEach(post => { %>
         
        
        <li>
            <a href="#">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>
    <a href="#" class="pagination">&lt; View Older Posts</a>
</section>